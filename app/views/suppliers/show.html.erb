<h2>Job: <%= @job.job_number %> - Supplier: <%= @supplier.name %> - Items:</h2>

<div class="new_data_forms"> 
	<h3>Add an item</h3>
	<%= form_tag({:controller => "list_items", :action => "create"}, :method =>"post") do %>
		<div class = "input_items"><div class="input_headers">Name: </div>  <%= text_field_tag(:item_data) %> </div>
		<div class = "input_items"><div class="input_headers">Initial state: </div>  <%= text_field_tag(:state) %> </div>
		<div class = "input_items"><div class="input_headers">Submit </div>  <%= submit_tag("Add the Item") %> </div>
		<%= hidden_field_tag(:partner_id, @supplier.id) %>
		<%= hidden_field_tag(:job_number, @job.job_number) %>
	<% end %>
</div>

<h3>Overdue items</h3>

<ul class="overdue_items">
	<% @yelling_items.each do |i| %>
		<li><input type=checkbox /><%= i.item_data %></li>
	<% end %>
</ul>

<h3>Open Items</h3>

<ul class="open_items">
	<% @open_items.each do |i| %>
		<li><input type=checkbox /><%= i.item_data %></li>
	<% end %>
</ul>

<h3>Waiting Items</h3>

<ul class="waiting_items">
	<% @waiting_items.each do |i| %>
		<li><input type=checkbox /><%= i.item_data %></li>
	<% end %>
</ul>

<h3>Closed Items</h3>
<ul class="closed_items">
	<% @closed_items.each do |i| %>
		<li><input type=checkbox /><%= i.item_data %></li>
	<% end %>
</ul>


