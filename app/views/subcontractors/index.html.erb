<h2>Vendors:</h2>

<div class="new_data_forms">
	
	<h3>Add a new subcontractor</h3>
	
	<%= form_tag({:controller => "subcontractors", :action => "create"}, :method =>"post") do %>
	<div class = "input_items"><div class="input_headers">Number: </div>  <%= text_field_tag(:name) %> </div>
	<div class = "input_items"><div class="input_headers">Name: </div>  <%= text_field_tag(:title) %> </div>
	<div class = "input_items"><div class="input_headers">Location: </div>  <%= text_field_tag(:phone_number) %> </div>
<% end %> <br />

<h3>Contact Person information:</h3>

<%= form_tag({:controller => "subcontractors", :action => "create"}, :method =>"post") do %>
	<div class = "input_items"><div class="input_headers">Name: </div>  <%= text_field_tag(:name) %> </div>
	<div class = "input_items"><div class="input_headers">Title: </div>  <%= text_field_tag(:title) %> </div>
	<div class = "input_items"><div class="input_headers">Phone number: </div>  <%= text_field_tag(:phone_number) %> </div>
	<div class = "input_items"><div class="input_headers">Email: </div>  <%= text_field_tag(:email) %> </div>		
<% end %> <br />

<h3>Address:</h3>

<%= form_tag({:controller => "subcontractors", :action => "create"}, :method =>"post") do %>
	<div class = "input_items"><div class="input_headers">Number: </div>  <%= text_field_tag(:number) %> </div>
	<div class = "input_items"><div class="input_headers">Name: </div>  <%= text_field_tag(:name) %> </div>
	<div class = "input_items"><div class="input_headers">PM id: </div>  <%= text_field_tag(:PM_id) %> </div>
	<div class = "input_items"><div class="input_headers">Location: </div>  <%= text_field_tag(:location) %> </div>
	<div class = "input_items"><div class="input_headers">Value: </div>  <%= text_field_tag(:value) %> </div>
	<div class = "input_items"><div class="input_headers">Submit </div>  <%= submit_tag("Create New Vendor") %> </div>	
<% end %>

</div>

<h3>Subcontractor:</h3>

<ul>
	<% @subcontractors.each do |i| %>
		<li><%= i.name %></li>
	<% end %>	
</ul>

<h3>Suppliers:</h3>

<ul>
	<% @suppliers.each do |i| %>
		<li><%= i.name %></li>
	<% end %>	
</ul>
