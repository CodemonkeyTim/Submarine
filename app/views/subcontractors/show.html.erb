<h2>Job: <%= @job.job_number %> - Subcontractor: <%= @subcontractor.name %> </h2>

<div class="new_data_forms"> 
	<h3>Assign a Vendor to Sub</h3>
	<%= form_tag({:controller => "list_items", :action => "create"}, :method =>"post") do %>
		<div class = "input_items"><div class="input_headers">Subcontractor: </div> 
			<select>
				<% @all_subcontractors.each do |i| %>
					<option><%= i.name %></option>
				<% end %>	
			</select>
		</div>
		<div class = "input_items"><div class="input_headers">Supplier: </div> 
			<select>
				<% @all_suppliers.each do |i| %>
					<option><%= i.name %></option>
				<% end %>	
			</select>
		</div>
		<div class = "input_items"><div class="input_headers">Submit </div>  <%= submit_tag("Assign Vendor") %> </div>
		<%= hidden_field_tag(:job_number, @job.job_number) %>
	<% end %>
</div>



<h3>Suppliers:</h3>

<ul>
	<% @suppliers.each do |i|  %>
		<li><%= link_to i.name, supplier_path(i.id, @job.job_number) %></li>
	<% end %>
</ul>

<h3>Subcontractors:</h3>

<ul>
	<% @subcontractors.each do |i|  %>
		<li><%= link_to i.name, subcontractor_path(i.id, @job.job_number) %></li>
	<% end %>
</ul>

