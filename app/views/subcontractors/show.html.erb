<fieldset id="job_details_box">
	<legend>Job details</legend>
	
	<div class="job_detail_list_item"><%= "Job number: #{@job.job_number}" %></div>
	<div class="job_detail_list_item"><%= "Job name: #{@job.name}" %></div>	
</fieldset>

<fieldset id="vendor_details_box">
	<legend>Vendor details</legend>
	
	<div id="contact_details">
		<div class="job_detail_list_item"><%= "Contact name: #{@contact_person.name}" %></div>
		<div class="job_detail_list_item"><%= "Phone: #{@contact_person.phone_number}" %></div>
		<div class="job_detail_list_item"><%= "E-mail: #{@contact_person.email}" %></div>
	</div>
	
	<div id="sub_header">Job specific vendor information:</div> <br />
	
	<div id="documents_section">
		<div id="section_header">Documents:</div>
		<% unless @asg.nil? || @asg.documents.length == 0 %>
			<% @asg.documents.each do |i| %>
				<div class="document_links"><%= link_to i.name, i.document.url %></div>
			<% end %>
		<% end %>
		<div id="add_doc_link"><%= link_to "Add a document", {:controller => "documents", :action => "new", :owner_type => "asg", :owner_id => @asg.id} %></div>		
	</div>
	
</fieldset>


<fieldset id="subs_details" class="">
  <legend><%= "#{@subcontractor.name}#{@sub_to}" %></legend>
	
	<div class="controls" id="assign_item">
		<%= link_to "Add item", {:controller => "list_items", :action => "new", :partner_id => @subcontractor.id, :parent_id => @parent_id, :job_id => @job.id, :partner_type => 1, :name => @subcontractor.name}%>
	</div>
	<div class="controls" id="assign_sub">
		<%= link_to "Assign a subcontractor", {:controller => "assignments", :action => "new", :job_id => @job.id, :parent_id => @subcontractor.id, :partner_type => 1, :super_parent_id => @parent_id}%>
	</div>
	<div class="controls" id="assign_sup">
		<%= link_to "Assign a supplier", {:controller => "assignments", :action => "new", :job_id => @job.id, :parent_id => @subcontractor.id, :partner_type => 2, :super_parent_id => @parent_id}%>
	</div>
	
	<%= render :partial => "index/sub_details", :locals => {:j => @subcontractor, :job_id => @job.id, :parent_id => @parent_id, :show_subname => 0} %>
		
</fieldset>

<fieldset id="subs_history">
	<legend>Subs History - <%= link_to "See full history", {:controller => "histories", :action => "show", :job_id => @job.id, :parent_id => @parent_id, :partner_id => @subcontractor.id, :partner_type => 1}%></legend>
		<% unless @log.nil? then @log.each do |i| %>
				<div class="history_logging"><%= i.log_data %></div>
			<% end %>
		<% end %>
	
</fieldset>

