<fieldset id="job_details_box">
	<legend>Job details</legend>
	
	<div class="job_detail_list_item"><%= "Job number: #{@job.job_number}" %></div>
	<div class="job_detail_list_item"><%= "Job name: #{@job.name}" %></div>
</fieldset>

<fieldset id="vendor_details_box">
	<legend>Vendor details</legend>
	
	<div id="contact_details">
		<div class="job_detail_list_item"><%= "Contact name: #{@contact_person.name}" %></div>
		<div class="job_detail_list_item"><%= "Phone: #{@contact_person.phone_number}" %></div>
		<div class="job_detail_list_item"><%= "E-mail: #{@contact_person.email}" %></div>
	</div>
	
</fieldset>


<fieldset id="subs_details" class="">
  <legend> <%= @subcontractor.name %></legend>
	
	<div class="controls" id="assign_item">
		<%= link_to "Add item", {:controller => "list_items", :action => "new", :id => @subcontractor.id, :job_number => @job.job_number, :type => "Subcontractor"}%>
	</div>
	<div class="controls" id="assign_sup">
		<%= link_to "Assign a supplier", {:controller => "suppliers", :action => "new", :id => @subcontractor.id, :job_number => @job.job_number}%>
	</div>
	
	<% unless @subcontractor.checklist_items.first.nil? then%>
  		<div class="headers">Checklist:</div>
  		
  		<% if @overdue_items.length != 0 %>
			<div id="overdue">	
				<% @overdue_items.each do |i| %>
					<div class="list_items" id="<%= i.id %>cli"> <%= image_tag get_image(i.state) %> <input type="checkbox" onclick="$.ajax('/mark_done/<%= i.id %>')"/> <%= i.item_data %></div>
		  		<% end %>	
			</div>
  		<% end %>
  		
  		<% if @open_items.length != 0 %>
	  		<div id="open">
	  			<% @open_items.each do |i| %>
	  				<div class="list_items" id="<%= i.id %>cli"> <%= image_tag get_image(i.state) %> <input type="checkbox" onclick="$.ajax('/mark_done/<%= i.id %>')"/> <%= i.item_data %></div>
		  		<% end %>
	  		</div>
  		<% end %>
  		
  		<% if @waiting_items.length != 0 %>
	  		<div id="waiting">
		  		<% @waiting_items.each do |i| %>
	  				<div class="list_items" id="<%= i.id %>cli"> <%= image_tag get_image(i.state) %> <%= i.item_data %></div>
	  			<% end %>
	  		</div>
  		<% end %>
  		
  		<% if @completed_items.length != 0 %>
	  		<div id="completed">
		  		<% @completed_items.each do |i| %>
	  				<div class="list_items" id="<%= i.id %>cli"><%= image_tag get_image(i.state) %> <%= i.item_data %></div>
	  			<% end %>
  		</div>
  		<% end %>
  		
	<% end %>
  	
  	<% unless @subcontractor.suppliers.first.nil? then%>			
		<div class="headers">Suppliers:</div>
		<div id="suppliers">
			<% @subcontractor.suppliers.each do |i| %>
				<div class="sup_names"><%= image_tag get_image(i.state) %> <%= link_to i.name, {:controller => "suppliers", :action => "show", :id => i.id, :job_number => @job_number, :sub_id => @subcontractor.id } %></div>
			<% end %>
			<div class="break"></div>
		</div>		
	<% end %>

  	<% unless @subcontractor.subtiersubcontractors.first.nil? then%>
  		<div class="headers">Subcontractors</div>
  	<% end %>

		
</fieldset>

<fieldset id="subs_history">
	<legend>Subs History - <%= link_to "See full history", "somewhere"%></legend>
	
	
</fieldset>

