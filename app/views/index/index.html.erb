<fieldset>
	<legend>Recent jobs</legend>	
	
	<% @recent_jobs.each do |i| %>
		<div class="jobs">
			<div class="job_headers"> 
				<%= image_tag get_image(i.state)%> <%= link_to "#{i.job_number} - #{i.name}", job_path(i.job_number) %> 
			</div>
		
			<% unless i.subcontractors.first.nil? then i.subcontractors.each do |t| %>
				<div class="sub_names"> <%= image_tag get_image(t.state) %> <%= link_to t.name, {:controller => "subcontractors", :action => "show", :id => t.id, :job_number => i.job_number} %></div>
					
					<%= render :partial => "jobs/sub_checklist", :locals => {:t => t} %>
								
					<% unless t.suppliers.first.nil? then t.suppliers.each do |l|%>
						<% unless l.checklist_items.first.nil? then %>
							<div class="sup_names"> <%= image_tag get_image(l.state)%> <%= link_to l.name, {:controller => "suppliers", :action => "show", :id => l.id, :job_number => i.job_number, :sub_id => t.id} %></div>
							<%= render :partial => "jobs/sup_checklist", :locals => {:l => l} %>
						<% end %>
						
						<% end %>
					<% end %>
	
					<% unless t.subtiersubcontractors.first.nil? then t.subtiersubcontractors.each do |l| %>
						
						<% end %>
					<% end %>
				<% end %>
			<% end %>
		</div>
	<% end %>		
</fieldset>

<fieldset>
	<legend>Overdue items</legend>
	<% @overdue_items.each_with_index do |i, x| %>
		<div class="overdue_list_items"> <%= image_tag get_image(1) %> <%= "#{i.item_data} is #{@overdue_amounts[x]} days overdue"%></div>
	<% end %>
</fieldset>

