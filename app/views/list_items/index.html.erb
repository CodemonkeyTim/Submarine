<h2>List items:</h2>

<h3>Open Items</h3>

<ul>
	<% @open_items.each do |i| %>
		<li><%= i.item_data %></li>
	<% end %>
</ul>

<h3>Waiting Items</h3>

<ul>
	<% @waiting_items.each do |i| %>
		<li><%= i.item_data %></li>
	<% end %>
</ul>

<h3>Closed Items</h3>
<ul>
	<% @closed_items.each do |i| %>
		<li><%= i.item_data %></li>
	<% end %>
</ul>