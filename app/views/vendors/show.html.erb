<fieldset id="vendor_details">
	<legend>Vendor details</legend>
	
	
</fieldset>

<fieldset id="vendor_jobs_details">
	<legend><%= @vendor.name %> - Jobs</legend>
	
	<% if @jobs.length != 0 then %>
		<% @jobs.each do |i| %>
			<div class="jobs">
				<div class="job_sidebar">
					<%= i.job_number%> <br />
					<%= i.name%>
				</div>
				
				<div class="job_item_list">
							
				</div>
				<div class="break"></div>
			</div>
		<% end %>
	<% end %>
</fieldset>




