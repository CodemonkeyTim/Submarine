<fieldset>
	<legend>Open</legend>
	
	<% @open_jobs.each do |i| %>
		<div class="job_headers"> <%= image_tag get_image(i.state) %> <%= link_to "#{i.job_number} - #{i.name}", job_path(i.id) %></div>
	<% end %>
	
</fieldset>

<fieldset>
	<legend>Closed</legend>
	
	<% @closed_jobs.each do |i| %>
		<div class="job_headers"> <%= image_tag get_image(i.state) %> <%= link_to "#{i.job_number} - #{i.name}", job_path(i.id) %></div>
	<% end %>
	
</fieldset>

