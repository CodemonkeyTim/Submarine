<!DOCTYPE html>
<html>
<head>
  <title> <%= title %> </title>
  	<%= stylesheet_link_tag get_stylesheets %>
  	<%= javascript_include_tag :defaults %>
  	<%= csrf_meta_tag %>
</head>
<body>
	 	<div id="page">
			<div id="header">
				<div id="logo">
					<img src="/images/tulogo.png" alt="Tapani Underground Logo" width="100" height="100">
				</div>
				<h1>Submarine</h1>
				<div id="headerbuttons">
					<ul>				
						<li>
							<a class="button" href='http://localhost/jobs/new'><img src="/images/plus.png" height="13" width="13">  New Job</a>
						</li>
						<li>
							<a class="button" href='http://localhost/vendors/new'><img src="/images/plus.png" height="13" width="13">  New Vendor</a>
						</li>
					</ul>
				</div>
			</div>
	
			<div id="nav">
				<ul>
					<li>
						<%= link_to "Home", "http://localhost", :id => am_i_active_tab(1) %>
					</li>				
					<li>
						<%= link_to "Jobs", jobs_path, :id => am_i_active_tab(2) %>
					</li>
					<li>
						<%= link_to "Vendors", vendors_path(), :id => am_i_active_tab(3) %>
					</li>
					<li>
						<%= link_to "To Do List", list_items_path, :id => am_i_active_tab(4) %>
					</li>
				</ul>
			</div>
			
			<div id="contents">
				<%= yield %>		
			</div>

			<div id="footer">
				<h3 id="footerText"><img src="/images/submarine.png">  &copy; Silvertrek Systems</h3>
			</div>
		</div>
</body>
</html>
