$('#<%= @id %>cli').each( function() {
	$(this).fadeOut();
	$(this).attr('src', '/images/<%= @state_name %>.png');
	$(this).fadeIn();
});

$('#<%= @id %>cli').attr('class', 'list_items <%= @state %>')

$('#<%= @id %>cli').each( function() {
	$(this).prepend('<input type="checkbox" id="<%="#{@id}input"%>" onclick="$.ajax(\'/mark_done/<%= @id %>\')"/>');
	$(this).prepend('<img src=/images/<%= @state_name %>.png ></img> ');
});


$('#<%= @id %>cli a').fadeOut();
