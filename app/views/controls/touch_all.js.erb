<% @items.each do |i| %>
	<% if i.cli_type == 2 || (i.cli_type == 3 && i.status == 1) %>
		$('#<%= i.id %>cli img ').each( function() {
			$(this).fadeOut();
			<% if i.state == 1 %>
				$(this).attr('src', '/images/overdue.png');
			<% else %>
				$(this).attr('src', '/images/open.png');
			<% end %>
			$(this).fadeIn();
		});
		
		<% @state; if i.state == 1 then @state = "overdues" end; if i.state == 2 then @state = "opens" end; if i.state == 3 then @state = "waitings" end; if i.state == 4 then @state == "completeds" end; %>
		
		$('#<%= i.id %>cli').attr('class', 'list_items <%= @state %>')
		
		$('#<%= i.id %>cli img').each( function() {
			$('#<%="#{i.id}input"%>').remove()
			$(this).after('<input type="checkbox" id="<%="#{i.id}input"%>" onclick="$.ajax(\'/mark_done/<%= i.id %>\')"/>');
			$('#<%= i.id %>cli span').html('<span><%= link_to "undo", {:controller => "controls", :action => "undo", :item_id => i.id, :state => i.state}, :style => "display: none;", :remote => true %></span>');
		});
	<% end %>
<% end %>

